{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "target": "ES2020"
  },
  "include": [
    "vite.config.js",
    "vite.config.ts",
    "*.config.js", 
    "*.config.ts"
  ],
  "exclude": [
    "src",
    "node_modules"
  ]
}