{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "vite.config.*",
    "*.config.*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}
