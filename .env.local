# .env.local
# Development environment configuration

# Use production services by default (emulators are flaky for this project)
VITE_USE_EMULATOR=false

VITE_EMULATOR_HOST=127.0.0.1
VITE_FIRESTORE_EMULATOR_PORT=8080
VITE_AUTH_EMULATOR_PORT=9099
VITE_STORAGE_EMULATOR_PORT=9199

# Debug mode for development
VITE_DEBUG=true

# Show dev tools (dev only)
VITE_SHOW_DEMO_TOOLS=true
VITE_FORCE_LONG_POLLING=true

# Admin accounts that should always be treated as super_admin in local-dev
VITE_ADMIN_EMAILS=liza@engagenatural.com,admin@engagenatural.com

# Explicit project ID for production
VITE_FIREBASE_PROJECT_ID=engagenatural-app

# Ensure the correct Firebase Storage bucket is used locally
VITE_FIREBASE_STORAGE_BUCKET=engagenatural-app.firebasestorage.app
